    '-v -no_carry_constraint -isafety -slicing:examples/qhasm/ladderstep1.cl:@fe25519'
    '-v -no_carry_constraint -isafety -slicing:examples/qhasm/ladderstep2.cl:@fe25519'
    '-v -no_carry_constraint -isafety -slicing:examples/qhasm/ladderstep3.cl:@fe25519'
