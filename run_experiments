    '-v -no_carry_constraint -isafety -slicing:examples/qhasm/ladderstep3_2.cl:@fe25519'
    '-v -no_carry_constraint -isafety -slicing:examples/openssl/ecp_nistz256/ecp_nistz256_mul_mont_broadwell.cl:@ecp_nistz256'
    '-v -no_carry_constraint -isafety -slicing:examples/openssl/ecp_nistz256/ecp_nistz256_sub.cl:@ecp_nistz256'
    '-v -no_carry_constraint -isafety -slicing:examples/openssl/ecp_nistz256/ecp_nistz256_mul_mont.cl:@ecp_nistz256'
    '-v -no_carry_constraint -isafety -slicing:examples/openssl/ecp_nistz256/ecp_nistz256_mul_by_2_chains.cl:@ecp_nistz256'
    '-v -no_carry_constraint -isafety -slicing:examples/openssl/ecp_nistz256/ecp_nistz256_from_mont_chains.cl:@ecp_nistz256'
#    '-v -no_carry_constraint -isafety -slicing:examples/openssl/ecp_nistz256/ecp_nistz256_ord_mul_mont_broadwell_without_reduction.cl:@ecp_nistz256'
    '-v -isafety -slicing:examples/openssl/ecp_nistz256/ecp_nistz256_add.cl:@ecp_nistz256'
