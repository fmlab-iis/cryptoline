    '-v -no_carry_constraint -isafety -slicing:examples/mbedtls-2.6.0/mbedtls_mpi_mul_mpi_4limbs_01001110.cl:@mbedtls'
    '-v -no_carry_constraint -isafety -slicing:examples/mbedtls-2.6.0/mbedtls_mpi_mul_mpi_4limbs_010100.cl:@mbedtls'
    '-v -no_carry_constraint -isafety -slicing:examples/mbedtls-2.6.0/mbedtls_mpi_mul_mpi_4limbs_0101010.cl:@mbedtls'
    '-v -no_carry_constraint -isafety -slicing:examples/mbedtls-2.6.0/mbedtls_mpi_mul_mpi_4limbs_01010110.cl:@mbedtls'
    '-v -no_carry_constraint -isafety -slicing:examples/mbedtls-2.6.0/mbedtls_mpi_mul_mpi_4limbs_010101110.cl:@mbedtls'
    '-v -no_carry_constraint -isafety -slicing:examples/mbedtls-2.6.0/mbedtls_mpi_mul_mpi_4limbs_0101100.cl:@mbedtls'
    '-v -no_carry_constraint -isafety -slicing:examples/mbedtls-2.6.0/mbedtls_mpi_mul_mpi_4limbs_01011010.cl:@mbedtls'
    '-v -no_carry_constraint -isafety -slicing:examples/mbedtls-2.6.0/mbedtls_mpi_mul_mpi_4limbs_010110110.cl:@mbedtls'
    '-v -no_carry_constraint -isafety -slicing:examples/mbedtls-2.6.0/mbedtls_mpi_mul_mpi_4limbs_0101101110.cl:@mbedtls'
    '-v -no_carry_constraint -isafety -slicing:examples/openssl/poly1305/poly1305_blocks.cl:@poly1305'
    '-v -no_carry_constraint:examples/openssl/poly1305/poly1305_loop_avx2.cl:@poly1305'
    '-v -no_carry_constraint -isafety -slicing:examples/boringssl/x25519_x86_64/x25519_x86_64_mul_chains.cl:@boringssl'
    '-v -no_carry_constraint -isafety -slicing:examples/boringssl/x25519_x86_64/x25519_x86_64_square_chains.cl:@boringssl'
    '-v -no_carry_constraint -isafety -slicing:examples/boringssl/x25519_x86_64/x25519_x86_64_ladderstep_tune.cl:@boringssl'
    '-v -no_carry_constraint -isafety -slicing:examples/boringssl/x25519_x86_64/x25519_x86_64_ladderstep_tune1.cl:@boringssl'
    '-v -no_carry_constraint -isafety -slicing:examples/boringssl/x25519_x86_64/x25519_x86_64_ladderstep_tune2.cl:@boringssl'
    '-v -no_carry_constraint -isafety -slicing:examples/boringssl/x25519_x86_64/x25519_x86_64_ladderstep_tune3.cl:@boringssl'
    '-v -no_carry_constraint -isafety -slicing:examples/boringssl/x25519_x86_64/x25519_x86_64_ladderstep_tune3_1.cl:@boringssl'
    '-v -no_carry_constraint -isafety -slicing:examples/boringssl/x25519_x86_64/x25519_x86_64_ladderstep_tune3_2.cl:@boringssl'
#    '-v -no_carry_constraint -isafety -slicing -vo appearing:examples/openssl/x86_64-mont/x86_64_mont_2.cl:@x86_64-mont'
    '-v -no_carry_constraint -isafety -slicing -vo appearing:examples/openssl/x86_64-mont/x86_64_mont_2_with_reduction.cl:@x86_64-mont'
    '-v -no_carry_constraint -isafety -slicing -vo appearing:examples/openssl/x86_64-mont/x86_64_mont_2_without_reduction.cl:@x86_64-mont'
#    '-v -no_carry_constraint -isafety -slicing -vo appearing:examples/openssl/x86_64-mont/x86_64_mont_4.cl:@x86_64-mont'
#    '-v -no_carry_constraint -isafety -slicing:examples/openssl/x86_64-mont/x86_64_mont_4_with_reduction.cl:@x86_64-mont' # time consuming
    '-v -no_carry_constraint -isafety -slicing:examples/openssl/x86_64-mont/x86_64_mont_4_without_reduction.cl:@x86_64-mont'
    '-v -no_carry_constraint -isafety -slicing -vo appearing:examples/openssl/x86_64-mont/x86_64_mont_4_without_reduction_cut.cl:@x86_64-mont'
    '-v -no_carry_constraint -isafety -slicing -vo appearing:examples/openssl/x86_64-mont/x86_64_mont_8_without_reduction_cut.cl:@x86_64-mont'
    '-v -no_carry_constraint -isafety -slicing -vo appearing:examples/openssl/x86_64-mont/x86_64_mont_16_without_reduction.cl:@x86_64-mont'
    '-v -no_carry_constraint -vo appearing -isafety -slicing -disable_range -cli:examples/pascal-mont/16limbs/montgomery_16_words-chains.cl:@pascal'
    '-v -no_carry_constraint -vo appearing -disable_safety -disable_range -disable_assertion -cli:examples/pascal-mont/64limbs/montgomery_64_words-chains_cut.cl:@pascal'
    '-v -no_carry_constraint -isafety -slicing -re -cli:examples/kyber/ntt/ntt_typed.cl:@kyber'
    '-v -no_carry_constraint -isafety -slicing:examples/FourQ/fp2add1271.cl:@fourq'
    '-v -no_carry_constraint -isafety -slicing:examples/FourQ/fp2sub1271.cl:@fourq'
    '-v -no_carry_constraint -isafety -slicing:examples/FourQ/fp2mul1271.cl:@fourq'
    '-v -no_carry_constraint -isafety -slicing:examples/FourQ/fp2sqr1271.cl:@fourq'
    '-v -no_carry_constraint -isafety -slicing:examples/supercop/crypto_scalarmult/curve25519/donna/crypto_scalarmult_curve25519_donna_fmul.cl:@supercop'
    '-v -no_carry_constraint -isafety -slicing:examples/supercop/crypto_scalarmult/curve25519/sandy2x/crypto_scalarmult_curve25519_sandy2x_fe51_mul.cl:@supercop'
    '-v -no_carry_constraint -isafety -slicing:examples/supercop/crypto_scalarmult/curve25519/sandy2x/crypto_scalarmult_curve25519_sandy2x_fe51_nsquare.cl:@supercop'
    '-v -track-split:examples/tests/test-join-spl-concat.cl:@tests'
    '-v -track-split:examples/tests/test-rol-ror.cl:@tests'
    '-v -track-split:examples/tests/track-split-cshl.cl:@tests'
    '-v -track-split:examples/tests/track-split-cshls.cl:@tests'
    '-v -track-split:examples/tests/track-split-cshr.cl:@tests'
    '-v -track-split:examples/tests/track-split-cshrs.cl:@tests'
    '-v -track-split:examples/tests/track-split-ssar.cl:@tests'
    '-v -track-split:examples/tests/track-split-ssars.cl:@tests'
    '-v -track-split:examples/tests/track-split-sshl.cl:@tests'
    '-v -track-split:examples/tests/track-split-ushl.cl:@tests'
    '-v -track-split:examples/tests/track-split-ushls.cl:@tests'
    '-v -track-split:examples/tests/track-split-ushr.cl:@tests'
    '-v -track-split:examples/tests/track-split-ushrs.cl:@tests'
    '-v:examples/tests/test-seteq.cl:@tests'
    '-v:examples/tests/test-setne.cl:@tests'
)

offset=0
cols=$(tput cols)

function print_left() {
    echo -n "${1}"
    pleft_len=`echo "${1}" | wc -m`
    offset=$((offset + pleft_len - 1))
}

function print_right() {
    len=${#1}
    offset=$((cols - offset - len))
    while [[ ${offset} -lt 0 ]]; do
        offset=$((offset + cols))
    done
    offset=$((offset + len))
    printf "%*s\n" ${offset} "${1}"
    offset=0
}

mkdir -p ${LOGDIR}

for pair in "${pairs[@]}"; do
    args=`echo ${pair} | cut -d ':' -f 1`
    file=`echo ${pair} | cut -d ':' -f 2`
    tags=`echo ${pair} | cut -d ':' -f 3`
    if [[ "${extra_args}" != "" ]]; then
        args="${args}${extra_args}"
    fi

    if [[ ${all} == false ]]; then
        skip=true
        for tag in "${enabled[@]}"; do
            if [[ `echo "${tags}" | grep "$tag\>"` ]]; then
                skip=false
                break
            fi
        done

        if [[ ${skip} == true ]]; then
            continue
        fi
    fi

    if [[ ! -f ${file} ]]; then
        echo "File ${file} not found. Skipped"
        continue
    fi

    if [[ `echo "${args}" | grep "\-SE lingeling"` || `echo "${args}" | grep "\-SE minisat"` || `echo "${args}" | grep "\-SE cadical"` ]]; then
        :
    elif [[ ${minisat} == true ]]; then
        args+=" -qfbv_args \"-SE minisat\""
    elif [[ ${lingeling} == true ]]; then
        args+=" -qfbv_args \"-SE lingeling\""
    elif [[ ${cadical} == true ]]; then
        args+=" -qfbv_args \"-SE cadical\""
    fi

    fn=`basename -s .cl ${file}`
    log=${LOGDIR}/${fn}.log
    runlog=${LOGDIR}/${fn}_run.log

    if [[ ${DEBUG} == 1 ]]; then
        args+=" -debug -o ${log}"
    fi

    print_left "Verifying ${file}: "

    start=`date +%s`
    echo ${args} ${file} | xargs ./verify.sh &> ${runlog}
    end=`date +%s`
    runtime=$((end-start))
    print_left "${runtime} seconds "

    resstr=
    if [[ -f "${runlog}" ]]; then
        res=`grep -E "Verification result:\s+\[OK\]" ${runlog}`
        if [[ "${res}" == "" ]]; then
            resstr="[FAIL]"
        else
            resstr="[OK]"
        fi
    else
        resstr="[ERROR]"
    fi
    print_right ${resstr}
done

echo
echo Logs are stored in ${LOGDIR}.
